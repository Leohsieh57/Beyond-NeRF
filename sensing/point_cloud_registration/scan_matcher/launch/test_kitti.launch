<launch>
    <include file="$(find kitti2bag)/launch/replay.launch"/>
    
    <arg name="solver" default="ndt"/>
    <node pkg="scan_matcher" type="scan_matcher_node" name="scan_matcher_node" output="screen">
        <rosparam param="voxel_leaves">[1, 1, 1]</rosparam>
        <param name="accum_knn" type="int" value="20" />
		<param name="accum_radius" type="double" value="1" />
		<param name="match_radius" type="double" value="4" />
        <param name="min_points" type="int" value="8" />
		<param name="num_threads" type="int" value="4" />
        <param name="visualize" type="bool" value="false" />
		<param name="max_iters" type="int" value="256" />
		<param name="solver" type="string" value="$(arg solver)" />
        <remap from="~/target_scan" to="/kitti/velo/pointcloud"/>
        <remap from="~/source_scan" to="/kitti/velo/pointcloud"/>
    </node>
	<!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find scan_matcher)/rviz/kitti.rviz" /> -->
</launch>