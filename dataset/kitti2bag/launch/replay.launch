<launch>
    <arg name="output_bag" value="$(find kitti2bag)/output/2011_09_29_drive_0071_extract.bag"/>
    <!-- <arg name="output_bag" value="$(find kitti2bag)/output/2011_09_26_drive_0019_sync.bag"/> -->
    <node pkg="rosbag" type="play" name="kitti_replay_node" output="log" 
        args="--clock --hz=1000000 $(arg output_bag)"/>


    <group ns="kitti/camera_color_left">
        <node pkg="image_proc" type="image_proc" name="image_proc_node"/>
    </group>

    <group ns="kitti/camera_color_right">
        <node pkg="image_proc" type="image_proc" name="image_proc_node"/>
    </group>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find kitti2bag)/rviz/kitti.rviz" />
</launch>