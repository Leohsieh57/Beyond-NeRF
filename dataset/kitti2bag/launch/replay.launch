<launch>
    <arg name="output_bag" value="$(find kitti2bag)/output/2011_09_29_drive_0071_extract.bag"/>
    <!-- <arg name="output_bag" value="$(find kitti2bag)/output/2011_09_26_drive_0019_sync.bag"/> -->
    <node pkg="rosbag" type="play" name="kitti_replay_node" output="log" 
        args="
        --clock --hz=1000000 $(arg output_bag)  
        --topics /tf /tf_static 
            /kitti/camera_color_left/camera_info 
            /kitti/camera_color_left/image_raw 
            /kitti/camera_color_right/camera_info 
            /kitti/camera_color_right/image_raw 
            /kitti/velo/pointcloud 
            /kitti/oxts/gps/fix">

        <!-- <remap from="/kitti/camera_color_left/camera_info" to="/stereo_left/camera_info"/>
        <remap from="/kitti/camera_color_left/image_raw" to="/stereo_left/image_raw"/>
        <remap from="/kitti/camera_color_right/camera_info" to="/stereo_right/camera_info"/>
        <remap from="/kitti/camera_color_right/image_raw" to="/stereo_right/image_raw"/>
        <remap from="/kitti/velo/pointcloud" to="/lidar_points"/>
        <remap from="/kitti/oxts/gps/fix" to="/navsat_fix"/> -->
    </node>


    <!-- <group ns="/stereo_left">
        <node pkg="image_proc" type="image_proc" name="image_proc_node"/>
    </group>

    <group ns="/stereo_right">
        <node pkg="image_proc" type="image_proc" name="image_proc_node"/>
    </group>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find kitti2bag)/rviz/kitti.rviz" /> -->
</launch>